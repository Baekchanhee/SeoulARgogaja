<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/start"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_above="@+id/destination"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-39dp"
        android:background="@drawable/bored"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/trans"
        android:layout_width="87dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/load"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_bus_fore"
        tools:layout_editor_absoluteY="60dp" />

    <ImageView
        android:id="@+id/load"
        android:layout_width="87dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_map_fore"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="60dp" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/start"
        android:layout_alignTop="@+id/start"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="6dp" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <!--<fragment
            android:id="@+id/MainFragment"
            android:name="com.example.a82107.myfragment1.MainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->
    </FrameLayout>

    <EditText
        android:id="@+id/destination"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/bored"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>