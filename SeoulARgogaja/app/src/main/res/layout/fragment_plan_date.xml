<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list2"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="1dp"
    android:paddingBottom="5dp"
    android:background="#f9f9f9" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_pd"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="16dp"
        android:background="@color/background_date"
        >

        <TextView
            android:id="@+id/plan_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="15sp"
            tools:text="여행 날짜"
            />

        <ImageView
            android:id="@+id/drag_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="16dp"
            android:gravity="end"
            android:src="@drawable/ic_directions_run_black_24dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/optimize"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_optimize" />

    </LinearLayout>

</RelativeLayout>